<form id='income-filter-form'>
  <h3>Filter Options</h3>

  <label for='incomeInvoiceIdInput'>Invoice ID:</label>
  <input type='text' id='incomeInvoiceIdInput' name='invoice_id' />

  <label for='incomeClientSelect'>Client:</label>
  <select id='incomeClientSelect' name='client'>
    <option value=''>All Clients</option>
    {{! Dynamically generate dropdown options in dashboard.js }}
  </select>

  <label for='incomeTypeSelect'>Income Type:</label>
  <select id='incomeTypeSelect' name='income_type'>
    <option value=''>All Types</option>
    {{! Dynamically generate dropdown options in dashboard.js }}
  </select>

  <label for='incomePaymentStatusSelect'>Paid:</label>
  <select id='incomePaymentStatusSelect' name='payment_status'>
    <option value=''>All</option>
    <option value='1'>Yes</option>
    <option value='0'>No</option>
  </select>

  <h3>Sort Options</h3>

  <label for='incomeSortSelect'>Sort By:</label>
  <select id='incomeSortSelect' name='sort'>
    <option value='invoice_id'>Invoice ID</option>
    <option value='issue_date'>Issue Date</option>
    {{! Need to remove the following options until future dev:
    <option value='client_name'>Client Name</option>
    <option value='income_type.income_name'>Income Type</option>
    currently, API expects IDs for sorting, but ASC/DESC order of names =/= order of IDs }}
    <option value='description'>Description</option>
    <option value='amount'>Amount</option>
    <option value='due_date'>Due Date</option>
    <option value='payment_status'>Payment Status</option>
  </select>

  <label for='incomeOrderSelect'>Order:</label>
  <select id='incomeOrderSelect' name='order'>
    <option value='ASC'>Ascending</option>
    <option value='DESC'>Descending</option>
  </select>

  <button class='text-white bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-300 dark:focus:ring-teal-800 shadow-lg shadow-teal-500/50 dark:shadow-lg dark:shadow-teal-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2'
   type='submit'>Apply Filters / Sort</button>
</form>