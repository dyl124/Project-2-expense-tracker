<form id='income-filter-form'>
  <h2>Filter Options</h2>

  <label for='invoiceId'>Invoice ID:</label>
  <input type='text' id='invoiceId' name='invoice_id' />

  <label for='clientDropdown'>Client:</label>
  <select id='clientDropdown' name='client'>
    {{! Dynamically generate dropdown options in dashboard.js }}
  </select>

  <label for='incomeType'>Income Type:</label>
  <select id='incomeType' name='income_type'>
    {{! Dynamically generate dropdown options in dashboard.js }}
  </select>

  <label for='paymentStatus'>Paid:</label>
  <select id='paymentStatus' name='payment_status'>
    <option value='true'>Yes</option>
    <option value='false'>No</option>
  </select>

  <h2>Sort Options</h2>

  <label for='sortBy'>Sort By:</label>
  <select id='sortBy' name='sortBy'>
    <option value='invoice_id'>Invoice ID</option>
    <option value='issue_date'>Issue Date</option>
    <option value='client_name'>Client Name</option>
    <option value='income_type_name'>Income Type</option>
    <option value='description'>Description</option>
    <option value='amount'>Amount</option>
    <option value='due_date'>Due Date</option>
    <option value='payment_status'>Payment Status</option>
  </select>

  <label for='order'>Order:</label>
  <select id='order' name='order'>
    <option value='ASC'>Ascending</option>
    <option value='DESC'>Descending</option>
  </select>

  <button type='submit'>Apply Filters / Sort</button>
</form>