<form id='expense-filter-form'>
  <h3>Filter Options</h3>

  <label for='expenseInvoiceId'>Invoice ID:</label>
  <input type='text' id='expenseInvoiceId' name='invoice_id' />

  <label for='expenseVendorSelect'>Vendor:</label>
  <select id='expenseVendorSelect' name='vendor'>
    <option value=''>All Vendors</option>
    {{! Dynamically generate dropdown options in dashboard.js }}
  </select>

  <label for='expenseTypeSelect'>Expense Type:</label>
  <select id='expenseTypeSelect' name='expense_type'>
    <option value=''>All Types</option>
    {{! Dynamically generate dropdown options in dashboard.js }}
  </select>

  <label for='expensePaymentStatusSelect'>Paid:</label>
  <select id='expensePaymentStatusSelect' name='payment_status'>
    <option value=''>All</option>
    <option value='1'>Yes</option>
    <option value='0'>No</option>
  </select>

  <h3>Sort Options</h3>

  <label for='expenseSortSelect'>Sort By:</label>
  <select id='expenseSortSelect' name='sort'>
    <option value='invoice_id'>Invoice ID</option>
    <option value='issue_date'>Issue Date</option>
    {{! Had to remove following functions. See  incomeFilterForm }}
    {{! <option value='vendor_name'>Vendor Name</option>
    <option value='expense_type_name'>Expense Type</option> }}
    <option value='description'>Description</option>
    <option value='amount'>Amount</option>
    <option value='due_date'>Due Date</option>
    <option value='payment_status'>Payment Status</option>
  </select>

  <label for='expenseOrderSelect'>Order:</label>
  <select id='expenseOrderSelect' name='order'>
    <option value='ASC'>Ascending</option>
    <option value='DESC'>Descending</option>
  </select>

  <button class='text-white bg-gradient-to-r from-teal-400 via-teal-500 to-teal-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-teal-300 dark:focus:ring-teal-800 shadow-lg shadow-teal-500/50 dark:shadow-lg dark:shadow-teal-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2'
   type='submit'>Apply Filters / Sort</button>
</form>